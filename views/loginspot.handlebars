<main class="grey darken-3">
    <div class="container grey-text text-lighten-3">
        <br>
        <h4>Create a new account</h4>
        <br>
        <form id="signup" name="signup" action="/signup">
            <input placeholder="Username" class="text" name="username" type="text" />
            <input placeholder="First Name" name="firstname" type="text" />
            <input placeholder="Last Name" name="lastname" type="text" />
            <input placeholder="Password" name="password" type="password" />
            <input class="btn indigo lighten-1" type="submit" value="Sign Up" />
        </form>
    </div>
</main>